  <%= form_with model: user_password, url: password_shares_path(password), class: "max-w-md mx-auto" do |form| %>
    <div class="mb-4">
      <%= form.label :user_id, class: "block font-bold mb-1" %>
      <%= form.collection_select :user_id, password.shareable_users, :id, :email, { include_blank: true }, class: "w-full p-2 border rounded" %>
    </div>

    <div class="mb-4">
      <%= form.label :role, class: "block font-bold mb-1" %>
      <%= form.select :role, UserPassword::ROLES.map { |role| [role.titleize, role] }, class: "w-full p-2 border rounded" %>
    </div>

    <div class="text-center">
      <%= form.submit "Share", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded inline-block" %>
      <%= link_to 'Back', password_path(password), class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded inline-block ml-2' %>
    </div>
  <% end %>