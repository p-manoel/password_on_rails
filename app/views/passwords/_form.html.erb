<%= form_with model: password, html: { class: 'bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4' } do |form| %>
    <% if form.object.errors.any? %>
        <% form.object.errors.full_messages.each do |message| %>
            <div class="bg-red-500 text-white px-3 py-2 rounded error-message">
                <%= message %>
            </div>
        <% end %>
    <% end %>

    <div class="mb-4">
        <%= form.label :url, class: 'block text-gray-700 text-sm font-bold mb-2' %>
        <%= form.url_field :url, class: 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline' %>
    </div>

    <div class="mb-4">
        <%= form.label :username, class: 'block text-gray-700 text-sm font-bold mb-2' %>
        <%= form.text_field :username, class: 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline' %>
    </div>

    <div class="mb-4">
        <%= form.label :password, class: 'block text-gray-700 text-sm font-bold mb-2' %>
        <%= form.text_field :password, class: 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline' %>
    </div>

    <div class="flex items-center justify-between">
        <%= form.submit "Submit", class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline' %>
        <%= button_tag "Delete", form: "delete_password", class: 'bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline' %>
    </div>
<% end %>

<%= form_with model: password, method: :delete, id: "delete_password", data: { turbo_confirm: "Are you sure?" } %>
