<div class="container mx-auto px-4">
  <h1 class="text-3xl font-bold mb-4 text-center"><%= @password.url %></h1>

  <div class="text-center mb-4">
    <%= link_to "Edit", edit_password_path, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded inline-block" %>
  </div>

  <div class="bg-white shadow rounded-lg p-6">
    <h6 class="font-bold text-gray-700 mb-2">Username / Email</h6>
    <pre class="bg-gray-100 rounded p-4 mb-4"><code><%= @password.username %></code></pre>

    <h6 class="font-bold text-gray-700 mb-2">Password</h6>
    <pre class="bg-gray-100 rounded p-4"><code><%= @password.password %></code></pre>
  </div>

  <div class="text-center">
    <%= link_to 'Back', passwords_path, class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded mt-4 inline-block' %>
  </div>
</div>
